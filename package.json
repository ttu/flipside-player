{
  "name": "flipside-player",
  "version": "1.0.0",
  "description": "A browser-based Spotify player with a split-vinyl UI",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev:mock": "concurrently \"npm run backend:dev:mock\" \"npm run frontend:dev:mock\"",
    "dev:build": "npm run build && npm run dev",
    "backend:dev": "npm run dev --workspace=backend",
    "backend:dev:mock": "USE_MOCK_SPOTIFY=true npm run dev --workspace=backend",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:dev:mock": "VITE_USE_MOCK_SDK=true npm run dev --workspace=frontend",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
    "lint:fix": "npm run lint:fix --workspace=frontend && npm run lint:fix --workspace=backend",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check --workspace=frontend && npm run type-check --workspace=backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:mock": "docker-compose -f docker-compose.mock.yml up --build",
    "docker:prod": "docker-compose up --build -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:install": "playwright install",
    "test:e2e:full": "node scripts/run-e2e-tests.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.40.0"
  }
}
